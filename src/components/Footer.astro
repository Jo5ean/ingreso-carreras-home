---
import Container from "./Container.astro";
---

<footer class="bg-[#B11111]">
  <Container>
    <div class="mt-5">
      <div class="mx-auto w-full py-2 lg:py-4">
        <div class="relative">
          <div
            class="flex md:absolute md:-bottom-[45px] md:right-0 mb-6 md:mb-0"
          >
            <a href="#" class="flex items-center">
              <img
                src="/landing/public/isologoBlanco.svg"
                class="ucasal-logo w-36"
                alt="UCASAL LOGO"
              />
            </a>
          </div>
        </div>
        <a href="https://www.ucasal.edu.ar" class="text-white text-xs">
          <i class="fas fa-home"></i> www.ucasal.edu.ar
        </a>
        <p class="text-white text-xs">
          <i class="fas fa-phone"></i> 54 0387 4268800 / 0810-555-(822725)
        </p>
        <p class="text-white text-xs">
          <i class="fas fa-envelope"></i> admision@ucasal.edu.ar
        </p>
        <hr
          class="my-2 border-gray-200 sm:mx-auto dark:border-white-700 lg:my-4"
        />
        <div class="flex justify-center align-middle">
          <span class="text-xs text-white dark:text-white">
            &copy; 2024 <a
              href="https://www.ucasal.edu.ar/"
              class="hover:underline">UCASAL</a
            >. Construi tu historia.
          </span>
        </div>
      </div>
    </div>
  </Container>
</footer>

---
import Container from "./Container.astro";
---

<Container>
    <h2 class="bigTitle ml-2 mt-5">
        <span style="color: rgb(97, 96, 96)"
            >UCASAL cumple con las normas de</span
        >&nbsp;calidad
    </h2>
    <div class="mt-5 flex justify-center items-center">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5 mx-3 sm:mx-0">
            <div class="flex justify-center align-middle mb-5">
                <img
                    class="w-1/2"
                    src="/landing/ingreso-carreras-2022/doslogosIRAM.png"
                    alt="IRAM GESTION DE CALIDAD"
                />
            </div>
            <div>
                <ul class="list-disc ml-4 text-sm">
                    <li class="text-lg mb-5">
                        Control de ex&aacute;menes del sistema de
                        educaci&oacute;n digital
                    </li>
                    <li class="text-lg mb-5">
                        Validaci&oacute;n y entrega de t&iacute;tulos
                    </li>
                    <li class="text-lg">
                        Gesti&oacute;n de consultas y reclamos del alumno
                        modalidad digital
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <section class="mt-5" id="form-section">
        <div
            class="grid grid-cols-1 md:grid-cols-2 justify-between items-center gap-4 mb-4"
        >
            <!-- Columna 1 -->
            <div class="flex justify-center">
                <div
                    class="relative z-10"
                    style="width: 300px; max-width: 350px;"
                >
                    <a
                        class="buttonno block text-white bg-[#B11111] border border-white rounded-full text-base font-medium py-2 px-3 text-center transition-transform transform-gpu hover:scale-105 hover:bg-[#ee1818] cursor-pointer"
                        onclick="scrollToForm('#formu')"
                    >
                        ¡Más Info! 📝
                    </a>
                </div>
            </div>
            <!-- Columna 2 -->
            <div class="flex justify-center">
                <div
                    class="relative z-10"
                    style="width: 300px; max-width: 350px;"
                >
                    <a
                        href="https://www.ucasal.edu.ar/inscripciones/"
                        class="buttonno block text-white bg-[#B11111] border border-white rounded-full text-base font-medium py-2 px-3 text-center transition-transform transform-gpu hover:scale-105 hover:bg-[#ee1818]"
                    >
                        ¡Quiero Inscribirme Online! 💻
                    </a>
                </div>
            </div>
        </div>
    </section>
</Container>